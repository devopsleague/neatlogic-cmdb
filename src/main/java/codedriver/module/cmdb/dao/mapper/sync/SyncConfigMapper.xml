<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="codedriver.module.cmdb.dao.mapper.sync.SyncConfigMapper">
    <select id="getSyncConfigById" parameterType="java.lang.Long"
            resultType="codedriver.framework.cmdb.dto.sync.SyncConfigVo">
        SELECT id,
               ci_id           AS ciId,
               is_active       AS isActive,
               collection_name AS collectionName,
               `condition`     AS conditionStr,
               crons           AS cronListStr,
               mapping         AS mappingStr
        FROM cmdb_ci_sync_config
        WHERE id = #{value}
    </select>
</mapper>
