<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="codedriver.module.cmdb.dao.mapper.group.GroupMapper">
    <cache type="codedriver.framework.dao.cache.CodeDriverCache" flushInterval="30000" size="100"></cache>

    <select id="getDoingGroupByServerId" parameterType="codedriver.framework.cmdb.dto.group.GroupVo"
            resultType="codedriver.framework.cmdb.dto.group.GroupVo" useCache="false">
        select a.id,
               a.is_active      as isActive,
               a.name,
               a.type,
               a.description,
               a.cientity_count AS ciEntityCount,
               a.status
        from cmdb_group a
        where server_id = #{serverId}
          and status = #{status}
    </select>

    <select id="getCiEntityCountByGroupId" parameterType="java.lang.Long" resultType="int" useCache="false">
        select count(1)
        from cmdb_cientity_group
        where group_id = #{value}
    </select>

    <sql id="searchGroupCondition">
        <where>
            <if test="isActive != null">
                and a.is_active = #{isActive}
            </if>
            <if test="keyword != null and keyword != ''">
                and (a.name LIKE CONCAT('%',#{keyword},'%') or a.description LIKE CONCAT('%',#{keyword},'%'))
            </if>
        </where>
    </sql>

    <select id="searchGroup" parameterType="codedriver.framework.cmdb.dto.group.GroupVo"
            resultType="codedriver.framework.cmdb.dto.group.GroupVo" useCache="false">
        select a.id,
        a.is_active as isActive,
        a.name,
        a.type,
        a.description,
        a.cientity_count AS ciEntityCount,
        a.error,
        a.status
        from cmdb_group a
        <include refid="searchGroupCondition"></include>
        LIMIT #{startNum},#{pageSize}
    </select>

    <select id="searchGroupCount" parameterType="codedriver.framework.cmdb.dto.group.GroupVo" resultType="int"
            useCache="false">
        select count(1)
        <include refid="searchGroupCondition"></include>
        from cmdb_group a
    </select>

    <resultMap id="groupResultMap" type="codedriver.framework.cmdb.dto.group.GroupVo">
        <id property="id" column="id"/>
        <result property="isActive" column="isActive"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="description" column="description"/>
        <result property="ciEntityCount" column="ciEntityCount"/>
        <result property="status" column="status"/>
        <result property="error" column="error"/>
        <collection property="ciGroupList" ofType="codedriver.framework.cmdb.dto.group.CiGroupVo">
            <id property="id" column="ciGroupId"/>
            <result property="ciId" column="ciId"/>
            <result property="ruleStr" column="ruleStr"/>
        </collection>
    </resultMap>

    <select id="getGroupById" parameterType="java.lang.Long" resultMap="groupResultMap" useCache="true">
        select a.id,
               a.is_active      as isActive,
               a.name,
               a.type,
               a.description,
               a.cientity_count AS ciEntityCount,
               a.status         AS status,
               a.error          as error,
               b.id             as ciGroupId,
               b.ci_id          as ciId,
               b.rule           as ruleStr
        from cmdb_group a
                 left join cmdb_ci_group b on a.id = b.group_id
        where a.id = #{value}
    </select>

    <select id="getCiGroupByCiId" parameterType="java.lang.Long"
            resultType="codedriver.framework.cmdb.dto.group.CiGroupVo" useCache="true">
        select a.id,
               a.ci_id    AS ciId,
               a.group_id AS groupId,
               a.rule     AS ruleStr
        FROM cmdb_ci_group a
                 JOIN cmdb_group b ON a.group_id = b.id AND b.is_active = 1
        WHERE a.ci_id = #{value}
    </select>

    <select id="getGroupIdByUserUuid" resultType="java.lang.Long" useCache="true">
        SELECT -1 AS group_id FROM `cmdb_group_auth` WHERE FALSE
        <if test="userUuid != null and userUuid != ''">
            UNION
            SELECT
            `group_id`
            FROM
            `cmdb_group_auth`
            WHERE
            auth_type = 'user'
            AND
            auth_uuid = #{userUuid}
        </if>
        <if test="teamUuidList != null and teamUuidList.size() > 0">
            UNION
            SELECT
            `group_id`
            FROM
            `cmdb_group_auth`
            WHERE
            auth_type = 'team'
            AND
            auth_uuid IN
            <foreach collection="teamUuidList" item="item" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
        <if test="roleUuidList != null and roleUuidList.size() > 0">
            UNION
            SELECT
            `group_id`
            FROM
            `cmdb_group_auth`
            WHERE
            auth_type = 'role'
            AND
            auth_uuid IN
            <foreach collection="roleUuidList" item="item" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
    </select>

    <update id="updateGroupCiEntityCount" parameterType="codedriver.framework.cmdb.dto.group.GroupVo">
        update cmdb_group
        set cientity_count = #{ciEntityCount}
        where id = #{id}
    </update>

    <update id="updateGroupStatus" parameterType="codedriver.framework.cmdb.dto.group.GroupVo">
        update cmdb_group
        set status    = #{status},
            server_id = #{serverId},
            error     = #{error}
        where id = #{id}
    </update>

    <update id="updateGroup" parameterType="codedriver.framework.cmdb.dto.group.GroupVo">
        update cmdb_group
        set name        = #{name},
            type        = #{type},
            description = #{description},
            is_active   = #{isActive},
            lcd         = now(3),
            lcu         = #{lcu}
        where id = #{id}
    </update>

    <insert id="insertGroup" parameterType="codedriver.framework.cmdb.dto.group.GroupVo">
        insert into cmdb_group (id,
                                name,
                                type,
                                description,
                                is_active,
                                cientity_count,
                                status,
                                fcd,
                                fcu)
        values (#{id},
                #{name},
                #{type},
                #{description},
                #{isActive},
                0,
                #{status},
                now(3),
                #{fcu})
    </insert>

    <insert id="insertCiGroup" parameterType="codedriver.framework.cmdb.dto.group.CiGroupVo">
        insert into cmdb_ci_group (id, ci_id, group_id, rule)
        values (#{id}, #{ciId}, #{groupId}, #{ruleStr})
    </insert>

    <insert id="insertCiEntityGroup" parameterType="codedriver.framework.cmdb.dto.group.CiEntityGroupVo">
        insert ignore into cmdb_cientity_group (cientity_id, group_id, ci_group_id)
        values (#{ciEntityId}, #{groupId}, #{ciGroupId})
    </insert>

    <delete id="deleteGroupById" parameterType="java.lang.Long">
        delete a,b,c,d
        from cmdb_group a
                 left join cmdb_ci_group b on a.id = b.group_id
                 left join cmdb_cientity_group c on a.id = c.group_id
                 left join cmdb_group_auth d on a.id = d.group_id
        where a.id = #{value}
    </delete>

    <delete id="deleteCiEntityGroupByGroupId" parameterType="java.lang.Long">
        delete
        from cmdb_cientity_group
        where group_id = #{value}
    </delete>

    <delete id="deleteCiEntityGroupByCiEntityIdAndCiGroupId">
        delete
        from cmdb_cientity_group
        where cientity_id = #{ciEntityId}
          and ci_group_id = #{ciGroupId}
    </delete>

    <delete id="deleteCiGroupByGroupId" parameterType="java.lang.Long">
        delete
        from cmdb_ci_group
        where group_id = #{value}
    </delete>
</mapper>
