    <select id="getAppEnvironmentListByModuleIdList"
            resultType="codedriver.framework.cmdb.dto.resourcecenter.entity.AppEnvironmentVo">
        SELECT DISTINCT
        rse.env_id AS envId,
        rse.env_name AS envName
        FROM
        ${schemaName}.resource_ipobject_appmodule ria
        join ${schemaName}.resource_appinstance ra on ria.resource_id = ra.id
        JOIN ${schemaName}.resource_softwareservice_env rse ON ra.id = rse.resource_id
        where ria.app_module_id in
        <foreach collection="list" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </select>
