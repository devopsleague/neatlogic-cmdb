    <delete id="deleteCiEntityByCiId" parameterType="java.lang.Long">
        DELETE
            a,b,c,d,e
        FROM cmdb_cientity a
                 LEFT JOIN cmdb_attrentity b
                           ON a.id =
                              b.`ci_entity_id`
                 LEFT JOIN cmdb_relentity c
                           ON a.id =
                              c.`from_cientity_id`
                 LEFT JOIN cmdb_relentity d
                           ON a.id =
                              c.`to_cientity_id`
                 LEFT JOIN cmdb_cientity_group e
                           ON a.id =
                              e.ci_entity_id
        WHERE a.ci_id =
              #{value}
    </delete>
