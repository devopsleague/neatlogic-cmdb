<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="neatlogic.module.cmdb.dao.mapper.cicatalog.CiCatalogMapper">

    <select id="checkCiCatalogIsExists" parameterType="java.lang.Long" resultType="int">
        SELECT COUNT(1) FROM `cmdb_ci_catalog` WHERE `id` = #{value}
    </select>

    <select id="checkCiCatalogNameIsRepeat" parameterType="neatlogic.framework.cmdb.dto.cicatalog.CiCatalogVo" resultType="int">
        SELECT COUNT(1) FROM `cmdb_ci_catalog` WHERE `name` = #{name} AND `parent_id` = #{parentId} AND `id` != #{id}
    </select>

    <select id="getCiCatalogById" parameterType="java.lang.Long" resultType="neatlogic.framework.cmdb.dto.cicatalog.CiCatalogVo">
        SELECT
            `id`,
            `name`,
            `parent_id` AS parentId,
            `lft`,
            `rht`
        FROM `cmdb_ci_catalog`
        WHERE `id` = #{value}
    </select>

    <select id="getAllCount" resultType="int">
        SELECT COUNT(1) FROM `cmdb_ci_catalog`
    </select>

    <select id="getCiCatalogList" parameterType="neatlogic.framework.common.dto.BasePageVo" resultType="neatlogic.framework.cmdb.dto.cicatalog.CiCatalogNodeVo">
        SELECT
            `id`,
            `name`,
            `parent_id` AS parentId,
            `lft`,
            `rht`
        FROM `cmdb_ci_catalog`
        ORDER BY `lft`
        LIMIT #{startNum}, #{pageSize}
    </select>

    <select id="checkCiCatalogIsInUsed" parameterType="java.lang.Long" resultType="int">
        SELECT COUNT(1) FROM `cmdb_ci` WHERE `catalog_id` = #{value}
    </select>

    <insert id="insertCiCatalog" parameterType="neatlogic.framework.common.dto.BasePageVo">
        INSERT INTO `cmdb_ci_catalog` (
            `id`,
            `name`,
            `parent_id`,
            `lft`,
            `rht`
        )
        VALUES
            (
                #{id},
                #{name},
                #{parentId},
                #{lft},
                #{rht}
            )
        ON DUPLICATE KEY UPDATE
            `name` = #{name}
    </insert>

    <delete id="deleteCiCatalog" parameterType="java.lang.Long">
        DELETE FROM `cmdb_ci_catalog` WHERE `id` = #{value}
    </delete>
</mapper>
